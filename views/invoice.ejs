<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            width: 100%;
        }
    </style>
</head>

<body>

    <div class="card text-center">
        <div class="card-header">
            Invoice
        </div>
        <div class="card-body">
            <h5 class="card-title">Invoice receipt service Ojekin</h5>
            <div>
                <p>Invoice Date: <%= toDateIndonesia(invoiceData.invoiceDate) %>
                </p>
            </div>
            <div class="d-flex justify-content-end">
                <table>
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Price</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% invoiceData.products.forEach(product=> { %>
                            <tr>
                                <td>
                                    <%= product.description %>
                                </td>
                                <td>
                                    <%= toRupiah(product.price) %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

            <a class="btn btn-primary" href="/login" role="button">Ok</a>
        </div>
        <div class="card-footer text-body-secondary">
            <p>
                <%= invoiceData.bottomNotice %>
            </p>
        </div>
    </div>

    <!-- boostrap -->
    <%- include('_boostrap') %>
</body>

</html>